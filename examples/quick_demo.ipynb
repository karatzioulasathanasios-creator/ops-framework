import numpy as np
from ops_framework import projective_structure_detection, calculate_projectivity_index

# Generate example multi-channel data
n_time, n_channels = 1000, 10
data = np.random.randn(n_time, n_channels)

# Add projective signal
projective_signal = np.random.randn(n_time, 1)
projective_vector = np.random.choice([-1, 1], size=n_channels)
data += projective_signal @ projective_vector.reshape(1, -1)

# Detect projective structure
results = projective_structure_detection(data)
print(f"Projectivity index Î  = {results['projectivity_index'][0]:.3f}")
print(f"Explained variance = {results['explained_variance'][0]:.3f}")
